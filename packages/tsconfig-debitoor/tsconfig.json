{
	"compilerOptions": {
		"module": "commonjs",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"target": "es2018",
		"outDir": "./dist",
		"sourceMap": true,
		"lib": [
			"es2018",
			"dom"
		],
		"noImplicitAny": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"strict": true,
		"noUnusedLocals": true,
		"types": [
			"node"
		],
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		}
	},
	"compileOnSave": true
}